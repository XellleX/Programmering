	public void paintComponent(Graphics g)
	{
		super.paintComponent(g);
		for(int i = 0; i < tiles.size(); i++)
		{
			System.out.println(tiles.get(i));
			g.drawImage(tileSprites, i * 32, 0, (i + 1) * 32, 32, 0, tiles.get(i) * 32,
					32, (tiles.get(i) + 1) * 32, this);
		}
	}
}
