package Konto;

import Synkronisering.Syncad;

public class Deposit implements Runnable
{
	Integer kontoPengar = 0;
	Thread deposit = new Thread(this);
	Thread withdraw = new Thread(this);
	
	public Deposit()
	{
		deposit.start();
		withdraw.start();
	}
	
	@Override
	public void run() 
	{
		while(true)
		{
			depositSaldo();
			//withdrawSaldo();
			
			try {
				deposit.sleep(400);
			}
			catch (InterruptedException e) {
				e.printStackTrace();
			}
		}
	}
	
	public synchronized void depositSaldo()
	{
		kontoPengar += 1;
		System.out.println("Ditt konto saldo är: " + kontoPengar + "kr");
	}
	
	public synchronized void withdrawSaldo()
	{
		
	}
	
	public static void main(String[] args) 
	{
		new Deposit();
	}
	
}
