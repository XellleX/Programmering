'*****************************************************************************
'
' Outlook 2007 Definition
' http://msdn2.microsoft.com/en-us/library/aa338201.aspx
'
'*****************************************************************************
' NOTES:
'*****************************************************************************
'
' * MSDN initially states that display and unicode-bidi are part of core
' 	 CSS properties, but later states they aren't supported by Outlook 2007
'
' * Unsure about @import
'
'*****************************************************************************

[definition]
Version=2.5
Revision=0
Author=Nick Bradbury
Icon=msie
NamedColors=1
SystemColors=1
SystemFonts=1
RGBColors=1

[at-rules]
@font-face=1
@import=1
@media=0
@page=0

[known types]
<units>			= (pt|in|pc|mm|cm|px|em|ex)
<generic-family>	= (serif|sans\-serif|cursive|fantasy|monospace)
<absolute-size> 	= (xx\-small|x\-small|small|medium|large|x\-large|xx\-large)
<relative-size>		= (larger|smaller)

[selectors]
Class=Y
ID=Y
Contextual=Y
Child=N
Descendant=Y
Sibling=N
Attribute=N
Universal=Y

[pseudo]
:link
:visited
:active
:hover
:first-line
:first-letter

[groups]
Box
Classification
Color and Background
Font
Positioning
Printing
Text

[properties]
' CORE properties
color
font
font-family
font-style
font-variant
font-size
font-weight
text-decoration
background
background-color
text-align
vertical-align
letter-spacing
line-height
white-space
border
border-color
border-style
border-width
src
size
marks
page-break-before
page-break-after
page-break-inside
list-style
list-style-type
border-collapse
' CORE EXTENDED (all the above plus these)
text-indent
margin
margin-left
margin-right
margin-top
margin-bottom
' FULL (all the above plus these)
width
height
padding
padding-left
padding-right
padding-top
padding-bottom
border-left
border-right
border-top
border-bottom
border-left-color
border-left-width
border-left-style
border-right-color
border-right-width
border-right-style
border-top-color
border-top-width
border-top-style
border-bottom-color
border-bottom-width
border-bottom-style

[background]
' Outlook 2007 supports only the color value of the background property
group=Color and Background
value1=<background-color>

[background-color]
initial=transparent
group=Color and Background
value1=transparent|<color>

[border]
group=Box
value1=<border-width>
value2=<border-style>
value3=<color>

[border-bottom]
group=Box
value1=<border-bottom-width>
value2=<border-style>
value3=<border-bottom-color>

[border-bottom-color]
group=Box
value1=<color>

[border-bottom-style]
group=Box
value1=none|solid|double|groove|ridge|inset|outset|dotted|dashed

[border-bottom-width]
group=Box
value1=thin|medium|thick|<length>

[border-collapse]
group=Box
initial=separate
value1=separate|collapse

[border-color]
group=Box
value1=<border-top-color>
value2=<border-right-color>
value3=<border-bottom-color>
value4=<border-left-color>

[border-left]
group=Box
value1=<border-left-width>
value2=<border-left-style>
value3=<border-left-color>

[border-left-color]
group=Box
value1=<color>

[border-left-style]
group=Box
value1=none|solid|double|groove|ridge|inset|outset|dotted|dashed

[border-left-width]
group=Box
value1=thin|medium|thick|<length>

[border-right]
group=Box
value1=<border-right-width>
value2=<border-right-style>
value3=<border-right-color>

[border-right-color]
group=Box
value1=<color>

[border-right-style]
group=Box
value1=none|solid|double|groove|ridge|inset|outset|dotted|dashed

[border-right-width]
group=Box
value1=thin|medium|thick|<length>

[border-style]
group=Box
value1=<border-top-style>
value2=<border-right-style>
value3=<border-bottom-style>
value4=<border-left-style>

[border-top]
group=Box
value1=<border-top-width>
value2=<border-top-style>
value3=<border-top-color>

[border-top-color]
group=Box
value1=<color>

[border-top-style]
group=Box
value1=none|solid|double|groove|ridge|inset|outset|dotted|dashed

[border-top-width]
group=Box
value1=thin|medium|thick|<length>

[border-width]
group=Box
value1=<border-top-width>
value2=<border-right-width>
value3=<border-bottom-width>
value4=<border-left-width>

[color]
group=Color and Background
value1=<color>

[font]
inherited=1
group=Font
value1=<system-font>
value2=<font-style>
value3=<font-variant>
value4=<font-weight>
value5=<font-size>
value6=<line-height>
value7=<font-family>

[font-family]
inherited=1
group=Font
value1=((<generic-family>|<family-name>),)*(<generic-family>|<family-name>)

[font-size]
inherited=1
initial=medium
group=Font
value1=<relative-size>|<absolute-size>|<percentage>|<length>

[font-style]
group=Font
value1=normal|italic|oblique

[font-variant]
group=Font
value1=normal|small\-caps

[font-weight]
group=Font
value1=normal|bolder|bold|lighter|100|200|300|400|500|600|700|800|900

[height]
group=Positioning
initial=auto
value1=auto|<percentage>|<length>

[letter-spacing]
group=Text
initial=normal
value1=normal|<length>

[line-height]
group=Text
value1=normal|<percentage>|<length>|<number>

[list-style]
inherited=1
initial=
group=Classification
value1=<list-style-type>

[list-style-type]
inherited=1
initial=disc
group=Classification
value1=disc|circle|square|decimal|lower\-roman|upper\-roman|lower\-alpha|upper\-alpha|none

[margin]
inherited=0
initial=
group=Box
value1=<margin-top>
value2=<margin-right>
value3=<margin-bottom>
value4=<margin-left>

[margin-bottom]
inherited=0
initial=0
group=Box
value1=<percentage>|<length>|auto

[margin-left]
inherited=0
initial=0
group=Box
value1=<percentage>|<length>|auto

[margin-right]
inherited=0
initial=0
group=Box
value1=<percentage>|<length>|auto

[margin-top]
inherited=0
initial=0
group=Box
value1=<percentage>|<length>|auto

[padding]
inherited=0
initial=
group=Box
value1=<padding-top>
value2=<padding-right>
value3=<padding-bottom>
value4=<padding-left>

[padding-bottom]
inherited=0
initial=0
group=Box
value1=<percentage>|<length>

[padding-left]
inherited=0
initial=0
group=Box
value1=<percentage>|<length>

[padding-right]
inherited=0
initial=0
group=Box
value1=<percentage>|<length>

[padding-top]
inherited=0
initial=0
group=Box
value1=<percentage>|<length>

[page-break-after]
group=Printing
initial=auto
value1=auto|always

[page-break-before]
group=Printing
initial=auto
value1=auto|always

[text-align]
group=Text
value1=left|right|center|justify

[text-decoration]
group=Text
initial=None
multiple=1
value1=none|underline|overline|line\-through

[text-indent]
group=Text
value1=<percentage>|<length>

[vertical-align]
group=Text
initial=baseline
value1=baseline|sub|super|top|middle|bottom|text\-top|text\-bottom

[white-space]
group=Text
initial=normal
value1=normal|nowrap|pre

[width]
group=Positioning
initial=auto
value1=auto|<percentage>|<length>

[browser-tips]
' not in core extended
property = height|padding|padding-left|padding-right|padding-top|padding-bottom|border-left|border-right|border-top|border-bottom|border-left-color|border-left-width|border-left-style|border-right-color|border-right-width|border-right-style|border-top-color|border-top-width|border-top-style|border-bottom-color|border-bottom-width|border-bottom-style
